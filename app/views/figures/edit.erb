<h1><%= @figure.name %></h1>
    <p>Landmarks: <%= @figure.landmarks %></p>
    <p>Titles: <%= @figure.titles %></p>

      <form action="/figures/<%=@figure.id%>" method="POST">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

        <p>Landmarks</p>
        <% @landmarks.each do |landmark|%>
        <p><label><%= landmark.name%></label>
          <input type="checkbox" name="figure[landmark_ids][]" value=<%="#{landmark.id}"%> id=<%="landmark_#{landmark.id}"%>></p>
        <%end%>

        <p>New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>

        <p>Titles</p>
        <% @titles.each do |title|%>
        <p><label><%= title.name%></label><input type="checkbox" name="figure[title_ids][]" value=<%="#{title.id}"%> id=<%="title_#{title.id}"%>></p>
        <%end%>

        <p>New Title: <input type="text" name="title[name]" id="new_title"></p>
        <input type="submit" name="submit" value="Edit Figure">
      </form>
